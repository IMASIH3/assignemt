<p id="notice"><%= notice %></p>

<h1>Users</h1>

<%= form_tag userlist_index_path, method: :get, class: "search-form" do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search users" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', userlist_path(user) %></td>
        <td><%= link_to 'Edit', edit_userlist_path(user) %></td>
        <td><%= link_to 'Destroy', userlist_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>

<br>

<%= link_to 'New User', new_userlist_path %>
